@model Agora.ViewModels.ProductFormViewModel
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



@using (Html.BeginForm("Save", "Products"))
{
    <div class="container product-form d-none d-sm-block">
        <div class="row">
            <div class="col-12">
                <div class="jumbotron">
                    <h1 class="display-4">Create a product</h1>
                    <p class="lead">This is a simple hero unit, a simple jumbotron-style component for calling extra attention to featured content or information.</p>
                    <hr class="my-4">
                </div>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-3">
                <label for="Products_Brand">Brand/Author</label>
                @Html.TextBoxFor(m => m.Products.Brand, new { @class = "form-control" })
            </div>
            <div class="form-group col-9">
                <label for="Products_Product">Product</label>
                @Html.TextBoxFor(m => m.Products.Product, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-8">
                <label for="Products_Image">Product image (URL)</label>
                @Html.TextBoxFor(m => m.Products.Image, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-1">
                <label for="Products_Price">Dollars ($)</label>
                @Html.TextBoxFor(m => m.Products.Price, new { @class = "form-control" })
            </div>
            <div class="input-group-append price-separator-box">
                <span class="input-group-text price-separator">.</span>
            </div>
            <div class="form-group col-1">
                <label for="Products_Cents">Cents (¢)</label>
                @Html.TextBoxFor(m => m.Products.Cents, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-4">
                <label for="Products_CategoryName">Category</label>
                @Html.DropDownListFor(m => m.Products.CategoryName, new SelectList(Model.Categories, "CategoryName", "CategoryName"), "Select Category", new { @class = "form-control" })
            </div>
            <div class="form-group col-4">
                <label for="Products_SubCategoryName">Subcategory</label>
                @Html.DropDownListFor(m => m.Products.SubCategoryName, new SelectList(Model.Subcategories, "SubCategoryName", "SubCategoryName"), "Select Category", new { @class = "form-control" })
            </div>
            <div class="form-group col-2">
                <label for="Products_Condition">Condition</label>
                @Html.DropDownListFor(m => m.Products.Condition, new SelectList(Model.ProductCondition, "ConditionType", "ConditionType"), "Select Condition", new { @class = "form-control" })
            </div>
            <div class="form-group col-2">
                <label for="Products_Availability">Availability</label>
                @Html.DropDownListFor(m => m.Products.Availability, new SelectList(Model.Availability, "AvailabilityType", "AvailabilityType"), "Select Availability", new { @class = "form-control" })
            </div>
        </div>
        @Html.HiddenFor(m => m.Products.ProductId)
        <div class="submit-button-box">
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </div>

    <div class="container product-form d-block d-sm-none">
        <div class="row">
            <div class="col-12">
                <div class="jumbotron">
                    <h1 class="display-4">Create a product</h1>
                    <p class="lead">This is a simple hero unit, a simple jumbotron-style component for calling extra attention to featured content or information.</p>
                    <hr class="my-4">
                </div>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-3">
                <label for="Products_Brand">Brand/Author</label>
                @Html.TextBoxFor(m => m.Products.Brand, new { @class = "form-control" })
            </div>
            <div class="form-group col-9">
                <label for="Products_Product">Product</label>
                @Html.TextBoxFor(m => m.Products.Product, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-8">
                <label for="Products_Image">Product image (URL)</label>
                @Html.TextBoxFor(m => m.Products.Image, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-3">
                <label for="Products_Price">Dollars ($)</label>
                @Html.TextBoxFor(m => m.Products.Price, new { @class = "form-control" })
            </div>
            <div class="input-group-append price-separator-box">
                <span class="input-group-text price-separator">.</span>
            </div>
            <div class="form-group col-3">
                <label for="Products_Cents">Cents (¢)</label>
                @Html.TextBoxFor(m => m.Products.Cents, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-6">
                <label for="Products_CategoryName">Category</label>
                @Html.DropDownListFor(m => m.Products.CategoryName, new SelectList(Model.Categories, "CategoryName", "CategoryName"), "Select Category", new { @class = "form-control" })
            </div>
            <div class="form-group col-6">
                <label for="Products_SubCategoryName">Subcategory</label>
                @Html.DropDownListFor(m => m.Products.SubCategoryName, new SelectList(Model.Subcategories, "SubCategoryName", "SubCategoryName"), "Select Category", new { @class = "form-control" })
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-6">
                <label for="Products_Condition">Condition</label>
                @Html.DropDownListFor(m => m.Products.Condition, new SelectList(Model.ProductCondition, "ConditionType", "ConditionType"), "Select Condition", new { @class = "form-control" })
            </div>
            <div class="form-group col-6">
                <label for="Products_Availability">Availability</label>
                @Html.DropDownListFor(m => m.Products.Availability, new SelectList(Model.Availability, "AvailabilityType", "AvailabilityType"), "Select Availability", new { @class = "form-control" })
            </div>
        </div>
        @Html.HiddenFor(m => m.Products.ProductId)
        <div class="submit-button-box">
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </div>


}

