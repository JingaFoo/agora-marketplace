@model IEnumerable<Agora.Models.Categories>

@{
    ViewBag.Title = "Categories";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="jumbotron">
            <h1 class="display-4">Categories</h1>
            <p class="lead">This is a simple hero unit, a simple jumbotron-style component for calling extra attention to featured content or information.</p>
            <hr class="my-4">
        </div>
    </div>
</div>
<div class="container category-content">
    <div class="row  inner-category">
        @foreach (var category in Model)
        {
            <div class="col-4">
                <div class="category-box">
                    <h4><a href="/@category.CategoryName"><span class="category-title">@category.CategoryName</span></a></h4>
                    <hr />
                    <i class="@category.CategoryIcon category-icon"></i>
                </div>
            </div>
        }
    </div>

</div>
