@{
    ViewBag.Title = "Home Page";
}

<div class="row">
    <div class="col-sm-12" style="margin-top: 30px;">
        <div class="jumbotron" style="background: #fff;">
            <h1 class="display-4">Popular</h1>
            <p class="lead">This is a simple hero unit, a simple jumbotron-style component for calling extra attention to featured content or information.</p>
            <hr class="my-4">
        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel" style="width: 500px; height: auto;">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="popular-item-img" src="https://www.adidas.ca/dis/dw/image/v2/aaqx_prd/on/demandware.static/-/Sites-adidas-products/default/dw7be84d16/zoom/C77153_01_standard.jpg" alt="First slide">
                </div>
                <div class="carousel-item">
                    <img class="popular-item-img" src="https://www.adidas.ca/dis/dw/image/v2/aaqx_prd/on/demandware.static/-/Sites-adidas-products/default/dw7be84d16/zoom/C77153_01_standard.jpg" alt="Second slide">
                </div>
                <div class="carousel-item">
                    <img class="popular-item-img" src="https://www.adidas.ca/dis/dw/image/v2/aaqx_prd/on/demandware.static/-/Sites-adidas-products/default/dw7be84d16/zoom/C77153_01_standard.jpg" alt="Third slide">
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <i class="fas fa-chevron-left carousel-prev-button"></i>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <i class="fas fa-chevron-right carousel-next-button"></i>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
</div>
