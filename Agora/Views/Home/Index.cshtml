@model IEnumerable<Agora.Models.Products>

@{
    ViewBag.Title = "Home Page";
}

<div class="row">
    <div class="col-sm-12" style="margin-top: 30px;">
        <div class="jumbotron" style="background: #fff; margin-bottom: 0;">
            <h1 class="display-4">Today's deals</h1>
            <p class="lead">This is a simple hero unit, a simple jumbotron-style component for calling extra attention to featured content or information.</p>
            <hr class="my-4">
        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col-md-4">
            <h3 class="category-title">Fashion</h3>
            <hr class="my-4" />
            <div id="carouselndicatorOne" class="carousel slide" data-ride="carousel" style="">
                <ol class="carousel-indicators">
                    <li data-target="#carouselndicatorOne" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselndicatorOne" data-slide-to="1"></li>
                    <li data-target="#carouselndicatorOne" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner">
                    @foreach (var product in @Model)
                {
                    var active = "";

                    if (product.ProductId == 1)
                    {
                        active = "active";
                    }
                    <div class="carousel-item @active">
                        <div class="carousel-caption d-none d-md-block carousel-top">
                            <h5 class="product-name">@product.Product</h5>
                        </div>
                        <img class="popular-item-img" src="@product.Image" alt="First slide">
                        <div class="carousel-caption d-none d-md-block">
                            <p class="product-price">$@product.Price</p>
                        </div>
                    </div>
            }
                </div>
                <a class="carousel-control-prev" href="#carouselndicatorOne" role="button" data-slide="prev">
                    <i class="fas fa-chevron-left carousel-prev-button"></i>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselndicatorOne" role="button" data-slide="next">
                    <i class="fas fa-chevron-right carousel-next-button"></i>
                    <span class="sr-only">Next</span>
                </a>
            </div>
